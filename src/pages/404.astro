---
import Layout from '~/layouts/PageLayout.astro';
import Button from '~/components/ui/Button.astro';

const metadata = {
  title: 'Page Not Found',
};
---

<Layout metadata={metadata}>
  <section class="hero min-h-[60vh] bg-base-200">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-9xl font-bold text-primary mb-4">404</h1>
        <h2 class="text-2xl font-bold mb-4">Page Not Found</h2>
        <p class="mb-8">The page you're looking for doesn't exist or has been moved.</p>
        <Button
          variant="primary"
          text="Back to Home"
          href="/"
          size="lg"
        />
      </div>
    </div>
  </section>
</Layout>

---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Pricing from '~/components/widgets/Pricing.astro';

import {headerData} from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: 'Landing Page',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <!-- <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Login',
          href: '#',
        },
        {
          variant: 'primary',
          text: 'Sign Up',
          href: '#',
        },
      ]}
      isSticky
    /> -->
    <Header {...headerData} isSticky />
  </Fragment>

  <!-- Hero2 Widget ******************* -->
  <Hero2
    tagline="SaaS Web Demo"
    actions={[
      {variant: 'secondary', target: '_blank', text: 'Get Started', href: 'https://github.com/basmpera/astromvp'},
    ]}
    image={{
      src: '/img/dependencies.webp',
      alt: 'AstroMvp Hero Image',
    }}
  >
    <Fragment slot="title">
      Streamline web development with AstroMvp: <br /> your ultimate <span class="text-white highlight">
        Template
      </span>
      <br />
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Enhance your website creation process with <span class="font-semibold">AstroMvp</span>'s Template.</span
      >
      Effortlessly combine the strength of Astro 4.0 and DaisyUI to build websites that align with your brand identity and
      engage your audience.
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features2
    id="features"
    tagline="Features"
    title="What you get with AstroMvp"
    subtitle="One of the most professional and comprehensive templates currently on the market. Most starred & forked Astro theme in 2022."
    items={[
      {
        title: 'Astro + Tailwind (DaisyUI)',
        description:
          'A smooth integration between Astro and CSS, providing high productivity, performance, and flexibility.',
        icon: 'tabler:brand-css3',
      },
      {
        title: 'Best Coding Practices',
        description:
          'Creating secure, efficient, and user-friendly websites that deliver exceptional experiences and long-term value.',
        icon: 'tabler:code',
      },
      {
        title: 'Optimized Load Time',
        description:
          'Good load time impacts search engine ranking, improves user experience (UI/UX) and increases conversion rates.',
        icon: 'tabler:speedboat',
      },
      {
        title: 'Search Engine Optimization (SEO)',
        description:
          "SEO enhances a website's visibility, attracting organic traffic and enabling it to reach more people.",
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Open to new ideas and collaborations',
        description:
          'Embracing an environment that welcomes new ideas and contributions fosters innovation, teamwork, and a unique user experience.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Pricing  -->

  <Pricing
    id="pricing"
    title="Our Prices"
    subtitle="Pay only for what you need"
    prices={[
      {
        title: 'basic',
        subtitle: 'Ideal for personal use',
        price: 29,
        period: 'per month',
        items: [
          {
            description: 'Includes basic features and support',
          },
          {
            description: 'Limited to one user account',
          },
          {
            description: 'Standard data storage capacity',
          },
          {
            description: 'Basic customer service',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Start now',
          href: '#',
        },
      },
      {
        title: 'standard',
        subtitle: 'Ideal for small teams',
        price: 69,
        period: 'Per Month',
        items: [
          {
            description: 'Includes all basic features and support',
          },
          {
            description: 'Supports up to five user accounts',
          },
          {
            description: 'Enhanced data storage capacity',
          },
          {
            description: 'Priority customer service',
          },
          {
            description: 'Access to premium resources',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Start now',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'premium',
        subtitle: 'Ideal for companies',
        price: 199,
        period: 'Per Month',
        items: [
          {
            description: 'Includes all standard features and support',
          },
          {
            description: 'Supports unlimited user accounts',
          },
          {
            description: 'Unlimited data storage capacity',
          },
          {
            description: '24/7 dedicated customer service',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Start now',
          href: '#',
        },
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs

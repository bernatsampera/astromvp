---
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';

export interface Props {
  title?: string;
  subtitle?: string;
  actions?: Array<{
    variant?: 'primary' | 'secondary' | 'tertiary' | 'link';
    text: string;
    href: string;
    target?: string;
    class?: string;
  }>;
  image?: {
    src: any;
    alt?: string;
  };
}

const {title, subtitle, actions = [], image} = Astro.props;
---

<section class="py-16 md:py-20 lg:py-24">
  <div class="max-w-6xl mx-auto px-6">
    <div class="flex flex-col md:flex-row gap-16 md:gap-12 items-center">
      <div class="w-full md:w-1/2 max-w-2xl">
        {title && (
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold leading-tight tracking-tight mb-8">
            <slot name="title">{title}</slot>
          </h1>
        )}
        
        {subtitle && (
          <p class="text-lg text-gray-700 leading-relaxed mb-10">
            <slot name="subtitle">{subtitle}</slot>
          </p>
        )}
        
        {actions.length > 0 && (
          <div class="flex flex-wrap gap-4">
            {actions.map((action) => (
              <Button 
                variant={action.variant}
                text={action.text}
                href={action.href}
                target={action.target}
                class={action.class}
              />
            ))}
          </div>
        )}
      </div>
      
      {image && (
        <div class="w-full md:w-1/2">
          <img
            src={image.src}
            alt={image.alt || ''}
            class="w-full h-auto rounded-lg"
          />
        </div>
      )}
    </div>
  </div>
</section>

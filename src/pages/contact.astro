---
import Layout from '~/layouts/PageLayout.astro';
import Button from '~/components/ui/Button.astro';

const metadata = {
  title: 'Contact Us | MVP Builder',
};
---

<Layout metadata={metadata}>
  <section class="py-16 md:py-24 bg-base-100">
    <div class="container mx-auto px-6">
      <div class="card lg:card-side bg-base-100 shadow-xl max-w-5xl mx-auto">
        <div class="card-body lg:w-1/2">
          <h1 class="card-title text-3xl font-bold mb-6">Book Your Free Consultation</h1>
          <p class="text-lg mb-8">
            Ready to turn your idea into a product? Schedule a free consultation call with our team to discuss your MVP requirements.
          </p>
          
          <form class="space-y-6">
            <div class="form-control w-full">
              <label class="label">
                <span class="label-text font-medium">Name</span>
              </label>
              <input 
                type="text" 
                class="input input-bordered w-full" 
                name="name" 
                required
              />
            </div>
            
            <div class="form-control w-full">
              <label class="label">
                <span class="label-text font-medium">Email</span>
              </label>
              <input 
                type="email" 
                class="input input-bordered w-full" 
                name="email" 
                required
              />
            </div>
            
            <div class="form-control w-full">
              <label class="label">
                <span class="label-text font-medium">Project Type</span>
              </label>
              <select class="select select-bordered w-full" name="project_type">
                <option value="" disabled selected>Select your project type</option>
                <option value="web_app">Web Application</option>
                <option value="mobile_app">Mobile Application</option>
                <option value="e-commerce">E-commerce</option>
                <option value="saas">SaaS Platform</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div class="form-control w-full">
              <label class="label">
                <span class="label-text font-medium">Message</span>
              </label>
              <textarea 
                class="textarea textarea-bordered w-full" 
                name="message" 
                rows="4" 
                required
              ></textarea>
            </div>
            
            <div class="form-control">
              <label class="label cursor-pointer">
                <span class="label-text">I agree to be contacted about my MVP project</span> 
                <input type="checkbox" class="checkbox checkbox-primary" name="consent" required />
              </label>
            </div>
            
            <div>
              <Button
                type="submit" 
                variant="primary"
                text="Schedule Consultation"
                class="w-full"
              />
            </div>
          </form>
        </div>
        
        <div class="divider lg:divider-horizontal">OR</div>
        
        <div class="card-body lg:w-1/2">
          <h2 class="card-title text-xl font-bold mb-4">Other Ways to Connect</h2>
          
          <ul class="menu bg-base-200 rounded-box mt-6">
            <li>
              <a href="mailto:hello@mvpbuilder.com" class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
                <span>hello@mvpbuilder.com</span>
              </a>
            </li>
            <li>
              <a href="tel:+1234567890" class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
                <span>+1 (234) 567-890</span>
              </a>
            </li>
          </ul>
          
          <div class="mt-10">
            <h3 class="font-bold mb-4">Our Office</h3>
            <address class="not-italic">
              123 Startup Avenue<br>
              Innovation District<br>
              San Francisco, CA 94103
            </address>
          </div>
          
          <div class="mt-10">
            <h3 class="font-bold mb-4">Follow Us</h3>
            <div class="flex space-x-4">
              <a href="#" class="btn btn-circle btn-outline btn-sm">
